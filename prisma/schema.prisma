// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:admin@localhost:5432"
}

model Users{
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique
  password String
  dtNasc String
}

model Comentario{
  id Int @id @default(autoincrement())
  conteudo String
  userName String
  idTema Int
}

model Tema{
  id Int @id @default(autoincrement())
  name String
}
